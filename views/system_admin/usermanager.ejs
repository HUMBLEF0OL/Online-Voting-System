<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Manage User</title>
    <!-- Required meta tags -->
    <%- include('./partials/head.ejs') %>
  </head>
  <body>






<div class="container-scroller">
      <!-- partial:partials/_sidebar.html -->


      <nav class="sidebar sidebar-offcanvas" id="sidebar">
        <%- include('./partials/navigation.ejs') %>
        </nav>


       
        <div class="main-panel">
          <div class="content-wrapper">



            
            <div class="content-wrapper">
              <div class="row">
                <div class="col-12 grid-margin stretch-card">
                  <div class="card corona-gradient-card">
                    <div class="card-body py-0 px-0 px-sm-3">
                      <div class="row align-items-center">
                        <div class="col-4 col-sm-3 col-xl-2">
                          <img src="/images/dashboard/Group126@2x.png" class="gradient-corona-img img-fluid" alt="">
                        </div>
                        <div class="col-5 col-sm-7 col-xl-8 p-0">
                          <h3 class="mb-1 mb-sm-0" style="text-align: center;">User manager</h3>
                          <p class="mb-0 font-weight-normal d-none d-sm-block" style="text-align: center;"><i>Select User to manage using the options</i></p>
                        </div>
                        <div class="col-3 col-sm-2 col-xl-2 pl-0 text-center">
                          
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

            <br />
            
  
     <% if(errors){ 
       errors.forEach(function(error) 
       { 
      %>
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <h5 style="text-align: center;">  <%= error %> </h5>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
     <%   
            }); 
            }

        if(alertsm.length>0)
        {


%>
           

<div  class="alert alert-success alert-dismissible fade show" role="alert">
  <h5 style="text-align: center;"><%= alertsm %></h5>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
            <%
          
          
          }

          if(users.length<1)
          {
          %>

          <div class="alert alert-warning" role="alert" style="text-align: center;">
            No any users were found!
          </div>


          <%
          

          }
          else

          {
            
 

        %>  
            <div class="row">
             
  
              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                  
  
                    <div class="table-responsive">
                      <table class="table table-dark table-hover">
                        <thead>
                          <tr>
                            <th style="width:5%">Full Name</th>
                            <th style="width:5%">Identification</th>
                            <th style="width:5%"> Role </th>
                            <th style="width:5%"> Status </th>
                            <th style="width:5%"> Date Registered </th>
                            <th style="width:5%"> Action</th>
                          </tr>
                        </thead>
                        <tbody>
              
              <%
                         
                          
                         //date conversion function

                         function dateconversion(date_value)
                         {
                       
                          var formattedDate = date_value.toLocaleDateString('en-GB', {
                          day: 'numeric', month: 'short', year: 'numeric'
                           }).replace(/ /g, '-');

                           return formattedDate;
                        }

                        var role=""
                        var status_u=""
                      



                          users.forEach(function(user){
                         
                            if(user.role=="e_admin")
                            {
    
                              role="Election Administrator";
                            }
                            else if(user.role=="admin")
                            {
                              role="System Administrator";
                            }
                            else
                            {
    
                              role="Voter";
                            }

              %>
                          <tr>
                            <td> <%= user.firstname+" "+user.lastname %> </td>
                            <td> <%= user.identification   %> </td>
                            <td> <%= role %> </td>
                            <%
                            if(user.status=="current")
                            {
                             %>
                             <td>  <div class="badge badge-outline-success">Active</div></td> 
                            
                            <% 
                            }
                            else
                            {
                            %>
                            <td> <div class="badge badge-outline-danger">Disabled</div></td>
                           <% } %>

                            <td> <%= dateconversion(user.createdAt) %> </td>
                            <td>
                              <div class="btn-group">
                                <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown"
                                  aria-haspopup="true" aria-expanded="false">
                                  Action
                                </button>
                                <div class="dropdown-menu">
                                  <a class="dropdown-item " href="/user/uupdate1/<%= user.user_id %>">update</a>
                                  <a class="dropdown-item " href="/user/udelete/<%= user.user_id %>">Delete </a>
                                  <a class="dropdown-item " href="/user/upreset/<%= user.user_id %>">Reset Password</a>
                                 <%
                                  if(user.status=="current")
                                  {
                                 %>  
                                  <a class="dropdown-item " href="/user/udisable/<%= user.user_id %>">Disable </a>
                                <% 
                                  }
                                  else
                                  {
                                %>   
                                    <a class="dropdown-item " href="/user/uenable/<%= user.user_id %>">Enable </a>
                                <%  
                                } 
                                %>
                                </div>
                              </div>
                            </td>
                          </tr>
                          <% }); %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
             
              





            </div>
         
          </div>

          <% }%>
        </div> 
        <nav aria-label="..." style="justify-content: center;">
              <ul class="pagination" style="justify-content: center;">

                 <% if(page==0){ %>
                <li class="page-item disabled"><span class="page-link">&lt;&lt;</span></li>
                <%} else {  %>
                <li class="page-item"><a class="page-link" href="/user/umanage/<%= page-1 %>">&lt;&lt;</a></li>
                <% } %>

                  <% for(let i = 0; i < totalPages; i++) { if(i==page){ %>
                  <li class="page-item active" aria-current="page">
                    <span class="page-link"><%= i+1 %></span>
                  </li>
                  <% } else { %>
                  <li class="page-item"><a class="page-link" href="/user/umanage/<%= i %>"><%= i+1 %></a></li>
                  <% }} if(page==(totalPages-1)) { %>
                  <li class="page-item disabled"><span class="page-link">&gt;&gt;</span></li>
                  <% } else { %>  
                 <li class="page-item"><a class="page-link" href="/user/umanage/<%= page+1 %>">&gt;&gt;</a></li>  
                 <% } %>

                </ul>
              </nav>

        <!-- main-panel ends -->
   
      <footer class="footer">
        <%- include('./partials/footer.ejs') %>
      </footer>
      <!-- page-body-wrapper ends -->
    
    
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="/vendors/select2/select2.min.js"></script>
    <script src="/vendors/typeahead.js/typeahead.bundle.min.js"></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="/js/off-canvas.js"></script>
    <script src="/js/hoverable-collapse.js"></script>
    <script src="/js/misc.js"></script>
    <script src="/js/settings.js"></script>
    <script src="/js/todolist.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="/js/file-upload.js"></script>
    <script src="/js/typeahead.js"></script>
    <script src="/js/select2.js"></script>
    <!-- End custom js for this page -->
  </body>
</html>